{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./../dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["es2021"],
    "typeRoots": ["./types", "./node_modules/@types"],
  },
  "include": ["./**/*.ts", "./../*.icns"],
  "exclude": [
    "node_modules"
  ]
}
