{
  "name": "Electron_Clipboard_Manager",
  "verson": "1.0.0",
  "description": "electron clip manager",
  "main": "app/main/index.ts",
  "scripts": {
    "build:main": "tsc -p app/main/tsconfig.json",
    "start": "concurrently 'yarn run start:render' 'wait-on http://127.0.0.1:3061 && yarn run build:main && yarn run start:main'",
    "start:main": "electron app/dist/index.js",
    "start:render": "cd app/renderer/src/main && yarn start",
    "watch:main": "nodemon"
  },
  "author": "ruler",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "i18next": "^23.5.1",
    "jsdom": "^22.1.0",
    "react-i18next": "^13.2.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/i18next": "^13.0.0",
    "@types/jsdom": "^21.1.4",
    "@types/node": "^20.8.2",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.10",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "concurrently": "^8.2.1",
    "electron": "27.0.0",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-electron": "^7.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.3",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-unicorn": "^48.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "react-devtools": "^4.28.4",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^34.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "win": {
    "icon": "assets/icon.ico",
    "target": [
      "squirrel",
      "nsis"
    ]
  }
}
