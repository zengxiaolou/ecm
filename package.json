{
  "name": "ElectronClipboardManager",
  "version": "1.0.0",
  "description": "electron clip manager",
  "main": "app/build/index.js",
  "scripts": {
    "build:main": "tsc -p app/main/tsconfig.json && babel app/dist --out-dir app/build && rimraf app/dist",
    "build:renderer": "cd app/renderer/src/main && yarn build",
    "start:win": "concurrently \"yarn run start:render:win\" \"wait-on http://127.0.0.1:3061 && yarn run build:main && yarn run start:main\"",
    "start:mac": "concurrently \"yarn run start:render:mac\" \"wait-on http://127.0.0.1:3061 && yarn run build:main && yarn run start:main\"",
    "start:main": "electron app/build/index.js",
    "start:render:win": "cd app/renderer/src/main && yarn start:win",
    "start:render:mac": "cd app/renderer/src/main && yarn start:mac",
    "watch:main": "nodemon",
    "dist": "rimraf build && yarn build:main && yarn build:renderer &&  electron-builder --mac --win --linux",
    "babel": "babel app/dist --out-dir app/build",
    "init:all": "yarn install && cd app/renderer/src/main && yarn install"
  },
  "author": "ruler",
  "license": "MIT",
  "dependencies": {
    "active-win": "^8.1.1",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "i18next": "^23.5.1",
    "i18next-fs-backend": "^2.2.0",
    "icon-extractor": "^1.0.3",
    "jsdom": "^22.1.0",
    "moment": "^2.29.4",
    "react-i18next": "^13.3.1",
    "simple-plist": "^1.3.1",
    "sqlite3": "^5.1.6",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@types/i18next": "^13.0.0",
    "@types/jsdom": "^21.1.4",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.10",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "concurrently": "^8.2.1",
    "electron": "27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-electron": "^7.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.3",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-unicorn": "^48.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "react-devtools": "^4.28.4",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^34.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,less}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache --quiet"
    ],
    "*.{css,less}": [
      "stylelint  --fix --cache"
    ]
  },
  "build": {
    "appId": "com.ruler.ecm",
    "productName": "ElectronClipgbboardManager",
    "directories": {
      "output": "build"
    },
    "files": [
      "app/build/**/*",
      "app/renderer/src/main/build/**/*",
      "assets/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
